{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "app.ts",
    "src/**/*",
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
